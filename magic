// The user enters their name
const userName = '';
// Program greets user with or without a given username to console
userName ? console.log(`Hello, ${userName}`) : console.log('Hello, there');
// User enters their question and gets displayed to console
let userQuestion = 'Will i ever be good at JS?';
userName ? console.log(`${userName} asked: ${userQuestion} `) : console.log(`The user asked: ${userQuestion}`);
// Creates random number between 0 and 7 and stores value in randomNumber
let randomNumber = Math.floor(Math.random() * 8);
// Will hold the answer selected by the random response generator
let eightBall = '';
// Responses that each number is assigned to
if (randomNumber === 0) {
    eightBall = 'It is certain';
} else if (randomNumber === 1) {
    eightBall = 'It is decidedly so';
} else if (randomNumber === 2) {
    eightBall = 'Reply hazy try again';
} else if (randomNumber === 3) {
    eightBall = 'Cannot predict now';
} else if (randomNumber === 4) {
    eightBall = 'Do not count on it';
} else if (randomNumber === 5) {
    eightBall = 'My sources say no';
} else if (randomNumber === 6) {
    eightBall = 'Outlook not so good';
} else if (randomNumber === 7) {
    eightBall = 'Signs point to yes';
}
